<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="30"
    android:background="@color/c2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="10"
        android:layout_margin="20dp"
        >



            <Button
                android:id="@+id/buzdolabi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Buzdolabı"
                android:background="@drawable/button_components_on"
                android:layout_margin="5dp">

            </Button>

            <Button
                android:id="@+id/firin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Fırın"
                android:layout_margin="5dp"
                android:background="@drawable/button_components_on"></Button>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="10"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/camasir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Çamaşır Makinesi"
            android:layout_margin="5dp"
            android:background="@drawable/button_components_on"
            ></Button>

        <Button
            android:id="@+id/bulasik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Bulaşık Makinesi"
            android:layout_margin="5dp"
            android:background="@drawable/button_components_on"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="10"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/televizyon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Kombi"
            android:layout_margin="5dp"
            android:background="@drawable/button_components_on"
            ></Button>

        <Button
            android:id="@+id/pc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Bilgisayar"
            android:layout_margin="5dp"
            android:background="@drawable/button_components_on"
            ></Button>
    </LinearLayout>




</LinearLayout>